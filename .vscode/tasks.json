{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure GUI",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}/gui",
                "-B", "${workspaceFolder}/gui/build",
                "-G", "MinGW Makefiles"
            ]
        },
        {
            "label": "CMake Build GUI",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/gui/build"
            ],
            "dependsOn": "CMake Configure GUI",
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "label": "Build Engine",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-g",
                "-O0",
                "-I${workspaceFolder}/engine/include",
                "${workspaceFolder}/engine/src/*.cpp",
                "-o",
                "${workspaceFolder}/engine/build/engine_test.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build Engine separately"
        }
    ]
}
