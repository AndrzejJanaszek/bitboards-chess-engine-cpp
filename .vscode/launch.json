{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug GUI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/gui/build/gui.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/gui/build",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "preLaunchTask": "CMake Build GUI"
        },
        {
            "name": "Debug Engine",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/engine/build/engine_test.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/engine/build",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Engine"
        }
    ]
}
